<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "Idparcel", "Identifiant" %></th>
      <th><%= sortable "Name" %></th>
      <th>Desti</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.idparcel %></td>
        <td><%= entry.name %></td>
        <td><%= entry.desti.name %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

<h1>Search</h1>

<%= form_tag("/entries", method: "get", remote: true) do %>
  <%= label_tag(:idparcel, "Search for:") %>
  <%= text_field_tag(:idparcel) %>
  <%= submit_tag("Search") %>
<% end %>

<div id="result"> </div>

<% @searchentries.each do |entry| %>
<%= entry.idparcel %><%= entry.idparcel %>
<% end %>